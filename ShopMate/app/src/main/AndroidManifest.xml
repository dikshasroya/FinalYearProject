<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shopmate">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/appicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LeaveQueue"></activity>
        <activity android:name=".AddQueue" />
        <activity android:name=".VirtualQueue" />
        <activity android:name=".Menu" />
        <activity android:name=".ForgotPassword" />
        <activity android:name=".registerUser" />
        <activity android:name=".Shpping" />
        <activity android:name=".ScannerActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MakePayment" />
        <activity android:name=".chatbot" />
        <activity android:name=".QRcode" />
        <activity android:name=".Bill" />
    </application>

</manifest>